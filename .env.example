# Database
# احصل على connection string من MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Authentication
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=https://yourdomain.com
AUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32
AUTH_URL=https://yourdomain.com

# Email Configuration
# استخدم App Password من Google Account Security
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here

# SMS Verification (Everify)
# Get your API key from: https://everify.dev
EVERIFY_API_KEY=your-everify-api-key-here

# App URL (for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cron Job Secret (optional, for securing cron endpoints)
# Generate: openssl rand -hex 32
CRON_SECRET=your-cron-secret-token-here

# Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./public/uploads

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Admin Default Credentials
# ⚠️ غيّر هذه القيم فوراً بعد أول تسجيل دخول
SUPER_ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeThisPassword@123!

# Environment Mode
ENV_MODE=development